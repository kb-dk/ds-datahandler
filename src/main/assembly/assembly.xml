<assembly>
  <id>distribution</id>
  <formats>
    <format>tar.gz</format>
  </formats>

  <files>
    <file>
      <source>conf/ocp/ds-datahandler.xml</source>
      <outputDirectory>/</outputDirectory>
      <destName>ds-datahandler.xml.SAMPLE</destName>
    </file>
    <file>
      <source>src/main/resources/ddl/create_ds_datahandler_db.ddl</source>
      <outputDirectory>/</outputDirectory>
      <destName>create_ds_datahandler_db.ddl</destName>
    </file>
  </files>

  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0644</fileMode>
      <includes>
        <include>*:war</include>
      </includes>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <fileSet>
      <outputDirectory>conf</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0644</fileMode>
      <directory>conf</directory>
      <excludes>
	      <exclude>ocp/</exclude>
	      <exclude>ds-datahandler-local.yaml</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <outputDirectory>.</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0744</fileMode>
      <includes>
          <include>CHANGELOG.md</include>
          <include>README.md</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/ds-datahandler-${version}</directory>
      <outputDirectory>.</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0644</fileMode>
      <includes>
        <include>ds-datahandler.build.properties</include>
      </includes>
    </fileSet>
  </fileSets>


</assembly>

